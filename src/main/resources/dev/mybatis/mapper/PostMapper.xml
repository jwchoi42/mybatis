<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dev.mybatis.mapper.PostMapper">

    <select id="findAll" resultType="Post">
        select * from posts
        <where>
            <if test="title != null and title != ''">
                and title like concat('%', #{title}, '%')
            </if>
            <if test="content != null and content != ''">
                and content like concat('%', #{content}, '%')
            </if>
            <if test="writer != null and writer != ''">
                and writer like concat('%', #{writer}, '%')
            </if>
        </where>
    </select>

    <!--
    <select id="findById" resultType="Post">
        select * from posts where id = #{id}
    </select>
    -->

    <update id="update">
        update posts
        set title = #{postDto.title}, content = #{postDto.content}, writer = #{postDto.writer}
        where id = #{id}
    </update>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into posts (title, content, writer)
        values (#{title}, #{content}, #{writer})
    </insert>

    <delete id="deleteById">
        delete from posts where id = #{id}
    </delete>

</mapper>